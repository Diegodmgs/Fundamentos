#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main()
{
	int CantidadCamisas;
	float PrecioTotal,PrecioConDescuento;
	cout<<"Ingrese la cantidad de camisas compradas:";
	cin>>CantidadCamisas;
	cout<<"ingrese el precio de todas las camisas";
	cin>>PrecioTotal;
	if(CantidadCamisas>=3)
		PrecioConDescuento=PrecioTotal*0.8;
	else
		PrecioConDescuento=PrecioTotal*0.9;
	cout<<"El precio con descuento es::"<<PrecioConDescuento;
	getch();

}
